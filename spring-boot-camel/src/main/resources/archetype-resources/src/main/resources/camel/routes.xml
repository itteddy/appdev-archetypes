<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://camel.apache.org/schema/spring" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://camel.apache.org/schema/spring https://camel.apache.org/schema/spring/camel-spring-${camel-version}.xsd">
    <route id="http-receiver">
        <from id="http-receiver-starter" uri="servlet://ping" />
        <setHeader name="Content-Type">
            <constant>application/json</constant>
        </setHeader>
        <setBody>
            <constant>{"msg" : "HELLO"}</constant>
        </setBody>
    </route>
</routes>