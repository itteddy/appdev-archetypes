<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="fuse-standard-archetype"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <requiredProperties >
    <requiredProperty key="quarkus-version">
      <defaultValue>0.18.0</defaultValue>
    </requiredProperty>
    <requiredProperty key="camel-version">
        <defaultValue>3.0.0-M2</defaultValue>
    </requiredProperty>
    <requiredProperty key="surefire-plugin-version">
      <defaultValue>2.22.0</defaultValue>
    </requiredProperty>
    <requiredProperty key="swagger-codegen-version">
      <defaultValue>3.0.9</defaultValue>
    </requiredProperty>
    <requiredProperty key="project-reporting-outputEncoding">
      <defaultValue>UTF-8</defaultValue>
    </requiredProperty>
    <requiredProperty key="project-build-sourceEncoding">
      <defaultValue>UTF-8</defaultValue>
    </requiredProperty>
    <requiredProperty key="maven-compiler-target">
      <defaultValue>1.8</defaultValue>
    </requiredProperty>
    <requiredProperty key="maven-compiler-source">
      <defaultValue>1.8</defaultValue>
    </requiredProperty>
  </requiredProperties>
 <fileSets>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
        <directory>src/main/docker</directory>
        <includes>
          <include>**/*.*</include>
        </includes>
      </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/test/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>ReadMe.md</include>
      </includes>
    </fileSet>
     <fileSet filtered="false" encoding="UTF-8">
         <directory></directory>
         <includes>
             <include>.gitignore</include>
         </includes>
     </fileSet>
     <fileSet filtered="false" encoding="UTF-8">
        <directory></directory>
        <includes>
            <include>.dockerignore</include>
        </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
